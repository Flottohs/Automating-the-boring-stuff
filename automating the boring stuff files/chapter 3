
while True :
    print('input your name')
    name = input()
    if name == 'your name':
        break
    else:
        print('your stuck here forever sukkkkaaa')
    inputchoice = input('press enter to continue')
    if inputchoice != '':
        continue
    else:
        print("could have just pressed enter your jerk")


#break ends a infinite loop
#continue skips to the next iteration of the loop

#for loops in python

print('Hello!')
for i in range(5):
    print('On this iteration, i is set to ' + str(i))
print('Goodbye!')

while i < 5:
    print('On this iteration, i is set to ' + str(i))
    i = i + 1
print('Goodbye!')


for i in range(12, 16):
    print(i)


for i in range(5, -1, -1):
    print(i)

#3rd digit controls how it goes from range(i,j)


import random
for i in range(5):
    print(random.randint(1, 10))


import random, sys, os, math

while True:
    print('Type exit to exit.')
    response = input('>')
    if response == 'exit':
        sys.exit()
    print('You typed ' + response + '.')

#sys.exit() will stop the program immediately

